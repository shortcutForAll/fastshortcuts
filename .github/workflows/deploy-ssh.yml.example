name: Deploy to Hostinger (SSH)

# This is an alternative deployment method using SSH/SFTP (more secure)
# To use this instead of FTP, rename this file to deploy.yml
# and rename the current deploy.yml to something else

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      
      - name: Setup Node.js (if needed)
        uses: actions/setup-node@v3
        with:
          node-version: '18'
      
      # Uncomment if you need to build your application
      # - name: Install dependencies
      #   run: npm ci
      
      # - name: Build application
      #   run: npm run build
      
      - name: Deploy via SSH
        uses: easingthemes/ssh-deploy@main
        with:
          SSH_PRIVATE_KEY: ${{ secrets.SSH_PRIVATE_KEY }}
          REMOTE_HOST: ${{ secrets.SSH_HOST }}
          REMOTE_USER: ${{ secrets.SSH_USERNAME }}
          REMOTE_PORT: ${{ secrets.SSH_PORT || 22 }}
          SOURCE: "./"  # Change to "dist/" or "build/" if needed
          TARGET: ${{ secrets.REMOTE_TARGET }}
          EXCLUDE: "/node_modules/, /.git/, /.github/, .env, README.md"
          SCRIPT_BEFORE: |
            whoami
            ls -al
          SCRIPT_AFTER: |
            echo "Deployment completed successfully!"
            ls -al ${{ secrets.REMOTE_TARGET }}
